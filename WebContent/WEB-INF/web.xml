<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.4">
  <description>MySQL Test App</description>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/dbTest</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <filter>
    <filter-name>adminFilter</filter-name>
    <filter-class>web.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>adminFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>memberFilter</filter-name>
    <filter-class>web.MemberFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>memberFilter</filter-name>
    <url-pattern>/member/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>web.LoginDirect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>web.LogoutDirect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login2</servlet-name>
    <servlet-class>web.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login2</servlet-name>
    <url-pattern>/login2.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegexWord</servlet-name>
    <servlet-class>web.SelectRegexServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegexWord</servlet-name>
    <url-pattern>/selectRegexWord.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>uploadInfo</servlet-name>
    <servlet-class>web.UpdateInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadInfo</servlet-name>
    <url-pattern>/UpdateInfo.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>updateWordInfo</servlet-name>
    <servlet-class>web.UpdateInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateWordInfo</servlet-name>
    <url-pattern>/UpdateWordInfo.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>updateWord</servlet-name>
    <servlet-class>web.UpdateWordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateWord</servlet-name>
    <url-pattern>/UpdateWord.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>addTextMem</servlet-name>
    <servlet-class>web.AddTextServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addTextMem</servlet-name>
    <url-pattern>/AddTextMem.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signUp</servlet-name>
    <servlet-class>web.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/signUp.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>activate</servlet-name>
    <servlet-class>web.ActivateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>activate</servlet-name>
    <url-pattern>/activate.do</url-pattern>
  </servlet-mapping>
</web-app>